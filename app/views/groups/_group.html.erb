<div id="<%= dom_id group %>" class="category">
  <% if group.icon.present? %>
    <%= image_tag group.icon, class: "category-icon" %>
  <% else %>
    <%= image_tag "default-category-icon.png", class: "category-icon" %>
  <% end %>
  <div class="category-info">
    <h3><%= group.name %></h3>
    <p>Purchases: <strong>$<%= group.total_purchases %></strong></p>
  </div>
</div>
